<div>
    <div class="d-flex pl-3 pr-3 pt-3">
        <div class="col-md-1 mr-3">
            <a href="{{ path('user_details', {
                        'userUsername': tweet.user.username
                    }) }}" ><img src="{{ tweet.user.avatar }}" alt="{{ tweet.user.username }}" class="rounded-circle avatar-tweet" ></a>
        </div>
        <div class="col-md-11">
            <a href="{{ path('user_details', {
                        'userUsername': tweet.user.username
                    }) }}" class="a-tweet"><span class="font-weight-bold"> {{ tweet.user.firstname }} {{ tweet.user.lastname }}</span></a> <span class="small" style="color: grey;">@{{ tweet.user.username }} {% if (tweet.user.bde) %}<i class="fas fa-check-circle" title="Membre du BDE" alt="Membre du BDE"></i>{% endif %} {{ tweet.datetime|date("m/d/Y") }}</span>
            <br />
            {{ tweet.content }}
            <br />
            <div class="d-flex">
                <div class="w-10"><a href=""><i class="fas fa-retweet"></i></a></div> <div class="w-10"><a href=""><i class="far fa-heart"></i></a></div>
            </div>
        </div>
    </div>
</div>
