{% extends 'base.html.twig' %}

{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}

<div class="d-flex justify-content-between pl-5 pr-5">
    <div class="shadow-sm p-3 mb-5 bg-white rounded w-25 p-3 m-2">
        <h1>Sidebar left</h1>
    </div>
    <div class="shadow-sm p-3 mb-5 bg-white rounded w-50 p-3 m-2">
        <h1>content middle</h1>
    </div>
    <div class="shadow-sm p-3 mb-5 bg-white rounded w-25 p-3 m-2">
        <h1>Sidebar Right</h1>
    </div>
</div>

{% else %}

<div class="container d-flex">
    <img src="{{ asset('img/logo.png') }}" alt="Logo du BDE" class="justify-content-between" height="350" width="350">
    <div class="sidebar">
        <a href="{{ path('login') }}">
            <button type="button" class="btn btn-primary">Se connecter</button>
        </a>
        <a href="{{ path('registration') }}">
            <button type="button" class="btn btn-danger">S'inscrire</button>
        </a>
    </div>
</div>

{% endif %}
{% endblock %}